
<div class='page-header'>
  <h1> Reviews</h1>
</div>

<table class="table table-striped">
            Product Reviews
            <tr>
              <th> Title</th>
              <th>Description</th>
              <th>Rating</th>
              <th>User</th>
              <th>Edit Review</th>
           </tr>
              <tbody>
                <% @product_reviews.each do |product_review| %>
                  <tr>
                      <td><%= product_review.title %></td>
                      <td><%= product_review.description %></td>
                      <td><%= product_review.rating %></td>
                      <td><%= User.find(product_review.user_id).name %></td>
                      <% if @user.product_reviews.find_by_id(product_review) %>
                        <td><%= link_to 'Edit Review', edit_product_product_review_path(product_review.product, product_review) %></td>
                      <% else %>
                        <td></td>
                      <% end %>
                 </tr>
                    <% end %>
              </tbody>
      </table>
